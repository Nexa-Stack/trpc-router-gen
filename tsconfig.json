{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": ["esnext"],
        "strict": true,
        "esModuleInterop": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "lib"
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules", "dist"]
}
